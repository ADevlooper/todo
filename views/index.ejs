<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">

    <h2 class="mb-4 text-center">üìù My Todo List</h2>

    <!-- Add Task Form -->
    <form action="/add" method="POST" class="mb-4">
      <div class="input-group">
        <input 
          type="text" 
          name="task" 
          class="form-control" 
          placeholder="Task name" 
          required
        >
        <input 
          type="text" 
          name="task_desc" 
          class="form-control" 
          placeholder="Description"
        >
        <button class="btn btn-primary">Add</button>
      </div>
    </form>

    <!-- Task Table -->
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Task</th>
          <th scope="col">Description</th>
          <th scope="col">Status</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (todos && todos.length > 0) { %>
          <% todos.forEach((todo, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= todo.task %></td>
              <td><%= todo.task_desc %></td>
              <td>
                <form action="/update/<%= todo.id %>" method="POST" style="display:inline;">
                  <input type="hidden" name="status" value="<%= !todo.status %>">
                  <button 
                    class="btn btn-sm <%= todo.status ? 'btn-success' : 'btn-secondary' %>"
                    title="Click to toggle status"
                  >
                    <%= todo.status ? 'Done' : 'Pending' %>
                  </button>
                </form>
              </td>
              <td>
                <form action="/delete/<%= todo.id %>" method="POST" style="display:inline;">
                  <button 
                    class="btn btn-danger btn-sm"
                    onclick="return confirm('Are you sure you want to delete this task?');"
                  >
                    Delete
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center text-muted">No tasks available</td>
          </tr>
        <% } %>
      </tbody>
    </table>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
